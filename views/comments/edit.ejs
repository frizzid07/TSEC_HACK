<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="formStyle">
            <h2 class="formTitle">Edit Comment by "<%= comment.author.username %>"</h2>
            <form action="/fundraisers/<%= fundraiser_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text" name="comment[text]" value="<%= comment.text %>" placeholder="Text">    
                </div>
                <div class="form-group">
                    <input class="btn btn-block btn-primary" type="submit">
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>