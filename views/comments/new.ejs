<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="formStyle">
            <h2 class="formTitle">Add a New Comment to <%= fundraiser.title %></h2>
            <form action="/fundraisers/<%= fundraiser._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text" name="comment[text]" placeholder="Text">    
                </div>
                <div class="form-group">
                    <input class="btn btn-block btn-primary" type="submit">
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>