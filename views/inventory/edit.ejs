<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="formStyle">
                <h1 class="formTitle">Edit "<%= inventory.title %>"</h1>
                <form action="/inventory/<%= inventory._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="inventory[title]" value="<%= inventory.title %>" placeholder="Name">    
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="inventory[quantity]" value="<%= inventory.quantity %>" placeholder="Image">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-block btn-lg btn-dark" type="submit">
                    </div>
                </form>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>