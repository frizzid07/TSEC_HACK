<% include ../partials/header %>
    
    <div class="container">
        <div class="row">
            <div class="formStyle">
                <h1 class="formTitle">Add a New Inventory</h1>
                <form action="/inventory" method="POST">
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="title" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="number" name="quantity" placeholder="Quantity">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-block btn-dark" type="submit">
                    </div>
                </form>
            </div>
        </div>
    </div>

