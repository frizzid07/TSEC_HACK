<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="formStyle">
                <h1 class="formTitle">Edit Employee Details</h1>
                <form action="/employees/<%= employee._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="employee[name]" value="<%= employee.name %>" placeholder="Name">    
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="employee[image]" value="<%= employee.image %>" placeholder="Employee Image">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="employee[qualification]" value="<%= employee.qualification %>" placeholder="Equalification">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="number" name="employee[age]" value="<%= employee.age %>" placeholder="Age">    
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="number" name="employee[experience]" value="<%= employee.experience %>" placeholder="Experience">    
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="number" name="employee[salary]" value="<%= employee.salary %>" placeholder="Salary">    
                    </div>
                    <div class="form-group">
                        <input class="btn btn-block btn-lg btn-dark" type="submit">
                    </div>
                </form>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>